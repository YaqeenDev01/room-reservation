@model room_reservation.ViewModel.FloorViewModel;
@{
ViewData["Title"] = "إضافة طابق";
}


<!-- span is the validation for each input as required-->


<div class="block-header border-bottom px-4 py-4">
    <h5 class="m-0">إضافة طابق</h5>
</div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" id="CreateFloor" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <!--select from drop down list building no-->

                <!-- START ITEM -->
                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="BuildingId" class="mb-1"> أسم المبنى</label>
                        <select asp-for="BuildingId" type="text" class="form-control" asp-items="@ViewBag.buildingsName">اختر </select>
                        <span asp-validation-for="BuildingId" class="text-danger">  </span>

                    </div>
                </div><!-- END ITEM -->
                <!-- START ITEM -->
                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="BuildingId" class="mb-1"> رقم المبنى </label>
                        <select asp-for="BuildingId" type="text" class="form-control" asp-items="@ViewBag.buildingsNo"> </select>
                        <span asp-validation-for="BuildingId" class="text-danger">  </span>

                    </div>
                </div><!-- END ITEM -->
               
         
                <!-- START ITEM -->
                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="FloorNo" class="cobtrol-label"></label>
                        <input asp-for="FloorNo" type="number" class="form-control" />
                        <span asp-validation-for="BuildingId" class="text-danger"></span>
                    </div>
                </div><!-- ssEND ITEM -->

                
                        

            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
            </div>
        </form>


    </div>
</div>


       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
       <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

                <script>
                    $(document).ready(function () {
                        $('#CreateFloor').submit(function (event) {
                            event.preventDefault(); // Prevent the default form submission
                            $.ajax({
                                url: '@Url.Action("Create")', // URL to the controller action
                                type: 'POST',
                                data: $(this).serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        Swal.fire({
                                            title: '!نجحت العملية',
                                            text: 'أُضِيفَ الطابق بنجاح',
                                            icon: 'success'
                                        }).then(() => {
                                            window.location.href = '@Url.Action("Index")'; // Redirect to Index page after success
                                        });
                                    } else {
                                        Swal.fire({
                                            title: '!فشلت العملية',
                                            text: 'لم يضَاف الطابق',
                                            icon: 'error'
                                        });
                                    }
                                },
                                error: function () {
                                    Swal.fire({
                                        title: 'Error!',
                                        text: 'An unexpected error occurred.',
                                        icon: 'error'
                                    });
                                }
                            });
                        });
                    });
                </script>
