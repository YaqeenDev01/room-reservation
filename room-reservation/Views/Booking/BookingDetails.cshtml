@model room_reservation.ViewModel.BookingViewModel

<div class="container mt-5">
    <div class="card border-light shadow-sm">
        <div class="card-body">
            <!-- Move the title inside the card body -->
            <div class="mb-4">
                <h5 class="m-0">عرض بيانات الحجز</h5>
            </div>
            <form asp-action="Details" method="post">
                <input type="hidden" asp-for="BookingId" />

                <div class="row">
                    <!-- Define a color class for card borders -->
                    <style>
                        .field-card {
                            border: 20 px solid #e0e0e0; /* Light grey border */
                            border-radius: 3px;
                            background-color: #f8f9fa; /* Light background color */
                            padding: 0.5rem; /* Padding inside the card */
                            margin-bottom: 0.5rem; /* Margin between cards */
                            display: flex; /* Flex display for alignment */
                            align-items: center; /* Center items vertically */
                            height: 2.5rem; /* Fixed height for uniformity */
                        }

                        .field-label {
                            font-size: 1 rem; /* Smaller font size for labels */
                            margin-right: 0.5rem; /* Space between label and value */
                            flex-shrink: 0; /* Prevent label from shrinking */
                        }

                        .field-value {
                            font-size: 1 rem; /* Smaller font size for values */
                            margin: 0; /* Remove margin for values */
                            flex-grow: 1; /* Allow value to grow and take available space */
                            overflow: hidden; /* Hide overflow text */
                            text-overflow: ellipsis; /* Ellipsis for overflow text */
                        }

                        .btn-custom {
                            background-color: #007bff; /* Primary button color */
                            border-color: #007bff; /* Button border color */
                            color: #ffffff; /* Button text color */
                        }

                            .btn-custom:hover {
                                background-color: #0056b3; /* Darker color for hover */
                                border-color: #004085; /* Darker border color for hover */
                            }
                    </style>

                    <!-- Building Name -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="BuildingNameAr" class="field-label">أسم المبنى:</label>
                            <p class="field-value">@Model.BuildingNameAr</p>
                        </div>
                    </div>

                    <!-- Floor Number -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="FloorNo" class="field-label">رقم الطابق:</label>
                            <p class="field-value">@Model.FloorNo</p>
                        </div>
                    </div>

                    <!-- Room Number -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="RoomNo" class="field-label">رقم القاعة:</label>
                            <p class="field-value">@Model.RoomNo</p>
                        </div>
                    </div>

                    <!-- Booking Date -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="BookingDate" class="field-label">تاريخ الحجز:</label>
                            <p class="field-value">@Model.BookingDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <!-- Seat Capacity -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="SeatCapacity" class="field-label">الاستيعاب:</label>
                            <p class="field-value">@Model.SeatCapacity</p>
                        </div>
                    </div>

                    <!-- Booking Start -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="BookingStart" class="field-label">بداية الحجز:</label>
                            <p class="field-value">@Model.BookingStart</p>
                        </div>
                    </div>

                    <!-- Booking End -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="BookingEnd" class="field-label">نهاية الحجز:</label>
                            <p class="field-value">@Model.BookingEnd</p>
                        </div>
                    </div>

                    <!-- Booking Status -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="BookingStatues" class="field-label">حالة الحجز:</label>
                            <p class="field-value">@Model.BookingStatusAR</p>
                        </div>
                    </div>

                    <!-- Room Type -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label asp-for="RoomAR" class="field-label">نوع القاعة:</label>
                            <p class="field-value">@Model.RoomAR</p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="@Url.Action("ViewBooking", "Booking")" class="btn btn-custom px-5">عودة</a>
                </div>

            </form>
        </div>
    </div>
</div>






