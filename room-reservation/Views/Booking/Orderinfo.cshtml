 @model room_reservation.ViewModel.BookingViewModel

<div class="block mb-4">
<div class="block-header border-bottom px-4 py-4">
    <h5 class="m-0">عرض بيانات طلب الحجز</h5>
</div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form id="bookingForm" method="post">
            <div class="row">
                   <input type="hidden" asp-for="guid" />
                          <!-- Displaying Booking Details -->
                <div class="col-md-6">
                    <div class="mb-4">
                        <label >  اسم مقدم الطلب</label>
                        <p class="form-control-plaintext">@Model.FullName</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="mb-1"> البريد الالكتروني </label>
                        <p class="form-control-plaintext">@Model.Email</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="mb-1">رقم الهاتف  </label>
                        <p class="form-control-plaintext">@Model.PhoneNumber</p>
                    </div>
                </div>
                @*   <div class="col-md-6">
                <div class="mb-4">
                <label class="mb-1">أسم المبنى</label>
                <p class="form-control-plaintext">@Model.BuildingNameAr</p>
                </div>
                </div>

                <div class="col-md-6">
                <div class="mb-4">
                <label class="control-label">رقم الطابق</label>
                <p class="form-control-plaintext">@Model.FloorNo</p>
                </div>
                </div> *@

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="control-label">رقم القاعة</label>
                        <p class="form-control-plaintext">@Model.RoomNo</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="control-label">تاريخ الحجز</label>
                        <p class="form-control-plaintext">@Model.BookingDate </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="control-label">الاستيعاب</label>
                        <p class="form-control-plaintext">@Model.SeatCapacity</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="control-label">بداية الحجز</label>
                        <p class="form-control-plaintext">@Model.BookingStart </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="control-label">نهاية الحجز</label>
                        <p class="form-control-plaintext">@Model.BookingEnd </p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                            <label class="control-label"><strong>حالة الحجز</strong></label>
                        <p class="form-control-plaintext">@Model.BookingStatues</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                            <label class="control-label"><strong>نوع القاعة</strong></label>
                        <p class="form-control-plaintext">@Model.RoomAR</p>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-success px-5" id="approveBooking" title="قبول">قبول</button>
                        <button type="button" class="btn btn-danger px-5" id="rejectBooking" title="رفض" data-bs-toggle="modal" data-bs-target="#rejectModal">رفض</button>
                    </div>

            </div>
        </form>
    </div>
</div>

    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">سبب الرفض</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Form for Rejecting the Booking -->
                    <div class="mb-3">
                        <label for="RejectionReason" class="form-label">السبب</label>
                        <textarea id="rejectionReason" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                        <button type="button" class="btn btn-danger" id="submitReject">رفض</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
    <script>
  // Handle approval
document.getElementById('approveBooking').addEventListener('click', function () {
    Swal.fire({
        title: 'هل أنت متأكد من قبول الحجز؟',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'نعم، اقبل الحجز!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Call approveBooking function
            approveBooking();
        }
    });
});

// Handle rejection in modal
document.getElementById('submitReject').addEventListener('click', function () {
    let rejectReason = document.getElementById('rejectionReason').value;
    if (rejectReason.trim() === "") {
        Swal.fire('خطأ', 'يجب إدخال سبب الرفض.', 'error');
        return;
    }
    Swal.fire({
        title: 'هل أنت متأكد من رفض الحجز؟',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'نعم، ارفض الحجز!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Call rejectBooking function
            rejectBooking(rejectReason);
        }
    });
});

// Function to approve booking
function approveBooking() {
    $.ajax({
        url: '@Url.Action("ApproveBooking", "Booking")',
        type: 'POST',
        data: { id: '@Model.guid' },
        success: function (response) {
            Swal.fire(
                'تم!',
                'تم قبول الحجز بنجاح.',
                'success'
            ).then(() => {
                        window.location.href = '@Url.Action("Orders")'; // إعادة التوجيه إلى صفحة Index بعد النجاح
                    });
        },
        error: function () {
            Swal.fire('خطأ', 'حدث خطأ أثناء قبول الحجز.', 'error');
        }
    });
}

// Function to reject booking with reason
function rejectBooking(reason) {
    $.ajax({
        url: '@Url.Action("RejectBooking", "Booking")',
        type: 'POST',
        data: {
            id: '@Model.guid',
            rejectReason: reason
        },
        success: function (response) {
            Swal.fire(
                'تم!',
                'تم رفض الحجز بنجاح.',
                'success'
            ).then(() => {
                        window.location.href = '@Url.Action("Orders")'; // إعادة التوجيه إلى صفحة Index بعد النجاح
                    });
        },
        error: function () {
            Swal.fire('خطأ', 'حدث خطأ أثناء رفض الحجز.', 'error');
        }
    });
}

    </script>


