@model room_reservation.ViewModel.BookingViewModel

<div class="container mt-5">
    <div class="card border-light shadow-sm">
        <div class="card-body">
            <div class="card-title mb-4">
                <h5 class="m-0">عرض بيانات طلب الحجز</h5>
            </div>
            <form id="bookingForm" method="post">
                <input type="hidden" asp-for="guid" />

                <div class="row">
                    <!-- Define a color class for card borders -->
                    <style>
                        .field-card {
                            border: 1px solid #e0e0e0; /* Light grey border */
                            border-radius: 3px;
                            background-color: #f8f9fa; /* Light background color */
                            padding: 0.5rem; /* Padding inside the card */
                            margin-bottom: 0.5rem; /* Margin between cards */
                            display: flex; /* Flex display for alignment */
                            align-items: center; /* Center items vertically */
                            height: 2.5rem; /* Fixed height for uniformity */
                        }

                        .field-label {
                            font-size: 0.75rem; /* Smaller font size for labels */
                            margin-right: 0.5rem; /* Space between label and value */
                            flex-shrink: 0; /* Prevent label from shrinking */
                        }

                        .field-value {
                            font-size: 0.75rem; /* Smaller font size for values */
                            margin: 0; /* Remove margin for values */
                            flex-grow: 1; /* Allow value to grow and take available space */
                            overflow: hidden; /* Hide overflow text */
                            text-overflow: ellipsis; /* Ellipsis for overflow text */
                        }

                        .btn-custom {
                            border-radius: 0.25rem; /* Small border radius */
                            font-size: 1rem; /* Slightly larger font size */
                            padding: 0.5rem 1rem; /* Adjusted padding for larger buttons */
                            border: none; /* Remove default border */
                            color: #ffffff; /* Text color */
                            margin-left: 0.5rem; /* Add space between buttons */
                            margin-right: 0.5rem; /* Add space between buttons */
                        }

                        .btn-approve {
                            background-color: #28a745; /* Green color for approve */
                        }

                            .btn-approve:hover {
                                background-color: #218838; /* Darker green for hover */
                            }

                        .btn-reject {
                            background-color: #dc3545; /* Red color for reject */
                        }

                            .btn-reject:hover {
                                background-color: #c82333; /* Darker red for hover */
                            }

                        .modal-header {
                            border-bottom: 1px solid #e0e0e0; /* Light grey border for modal header */
                        }

                        .card-title {
                            border-bottom: 1px solid #e0e0e0; /* Light grey border for title section */
                            padding-bottom: 0.5rem; /* Padding below title */
                            margin-bottom: 1rem; /* Space below title section */
                        }
                    </style>

                    <!-- Applicant Name -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">اسم مقدم الطلب:</label>
                            <p class="field-value">@Model.FullName</p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">البريد الالكتروني:</label>
                            <p class="field-value">@Model.Email</p>
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">رقم الهاتف:</label>
                            <p class="field-value">@Model.PhoneNumber</p>
                        </div>
                    </div>

                    <!-- Room Number -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">رقم القاعة:</label>
                            <p class="field-value">@Model.RoomNo</p>
                        </div>
                    </div>

                    <!-- Booking Date -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">تاريخ الحجز:</label>
                            <p class="field-value">@Model.BookingDate</p>
                        </div>
                    </div>

                    <!-- Seat Capacity -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">الاستيعاب:</label>
                            <p class="field-value">@Model.SeatCapacity</p>
                        </div>
                    </div>

                    <!-- Booking Start -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">بداية الحجز:</label>
                            <p class="field-value">@Model.BookingStart</p>
                        </div>
                    </div>

                    <!-- Booking End -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">نهاية الحجز:</label>
                            <p class="field-value">@Model.BookingEnd</p>
                        </div>
                    </div>

                    <!-- Booking Status -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">حالة الحجز:</label>
                            <p class="field-value">@Model.BookingStatusAR</p>
                        </div>
                    </div>

                    <!-- Room Type -->
                    <div class="col-md-6 mb-2">
                        <div class="field-card">
                            <label class="field-label">نوع القاعة:</label>
                            <p class="field-value">@Model.RoomAR</p>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="button" class="btn btn-approve btn-custom" id="approveBooking" title="قبول">قبول</button>
                    <button type="button" class="btn btn-reject btn-custom" id="rejectBooking" title="رفض" data-bs-toggle="modal" data-bs-target="#rejectModal">رفض</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">سبب الرفض</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for Rejecting the Booking -->
                <form asp-action="RejectBooking" method="post">
                    <input type="hidden" asp-for="BookingId" />
                    <div class="mb-3">
                        <label for="RejectionReason" class="form-label">السبب</label>
                        <textarea asp-for="RejectReason" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-danger">رفض الحجز</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
    <script>
  // Handle approval
document.getElementById('approveBooking').addEventListener('click', function () {
    Swal.fire({
        title: 'هل أنت متأكد من قبول الحجز؟',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'نعم، اقبل الحجز!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Call approveBooking function
            approveBooking();
        }
    });
});

// Handle rejection in modal
document.getElementById('submitReject').addEventListener('click', function () {
    let rejectReason = document.getElementById('rejectionReason').value;
    if (rejectReason.trim() === "") {
        Swal.fire('خطأ', 'يجب إدخال سبب الرفض.', 'error');
        return;
    }
    Swal.fire({
        title: 'هل أنت متأكد من رفض الحجز؟',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'نعم، ارفض الحجز!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Call rejectBooking function
            rejectBooking(rejectReason);
        }
    });
});

// Function to approve booking
function approveBooking() {
    $.ajax({
        url: '@Url.Action("ApproveBooking", "Booking")',
        type: 'POST',
        data: { id: '@Model.guid' },
        success: function (response) {
            Swal.fire(
                'تم!',
                'تم قبول الحجز بنجاح.',
                'success'
            ).then(() => {
                        window.location.href = '@Url.Action("Orders")'; // إعادة التوجيه إلى صفحة Index بعد النجاح
                    });
        },
        error: function () {
            Swal.fire('خطأ', 'حدث خطأ أثناء قبول الحجز.', 'error');
        }
    });
}

// Function to reject booking with reason
function rejectBooking(reason) {
    $.ajax({
        url: '@Url.Action("RejectBooking", "Booking")',
        type: 'POST',
        data: {
            id: '@Model.guid',
            rejectReason: reason
        },
        success: function (response) {
            Swal.fire(
                'تم!',
                'تم رفض الحجز بنجاح.',
                'success'
            ).then(() => {
                        window.location.href = '@Url.Action("Orders")'; // إعادة التوجيه إلى صفحة Index بعد النجاح
                    });
        },
        error: function () {
            Swal.fire('خطأ', 'حدث خطأ أثناء رفض الحجز.', 'error');
        }
    });
}

    </script>


