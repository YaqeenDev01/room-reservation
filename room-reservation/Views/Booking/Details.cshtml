@model room_reservation.ViewModel.BookingViewModel
@{
    ViewData["Title"] = "عرض بيانات الحجز";
}
<script>
    @{
        if (@ViewData["Successful"] != null)
        {
            <Text>
                var result = '@Html.Raw(ViewData["Successful"])';
            Swal.fire(result, '', 'success')
                .then(
                    function () {
                        window.location.href = '@Url.Action("Index", "Floor")';
                    }
                );
            </Text>
        }
        else if (@ViewData["Failed"] != null)
        {
            <Text>
                var result = '@Html.Raw(ViewData["Failed"])';
            Swal.fire(result, '', 'error');
            </Text>
        }
    }
</script>

<!-- span is the validation for each input as required-->


<div class="block-header border-bottom px-4 py-4">
    <h5 class="m-0">عرض بيانات الحجز</h5>
</div>
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Details">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <!--select from drop down list building no-->
                <!-- START ITEM -->
