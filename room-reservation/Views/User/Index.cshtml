@model IEnumerable<UserViewModel>;
@{
    ViewData["Title"]="إدارة المستخدمين";
}

<div class="block mb-4">
    <div class="block-header border-bottom px-4 py-3">
        <h5 class="m-0">إدارة المستخدمين</h5>
        <div class="d-flex gap-2">
            <div class="form-group">
                <form asp-controller="User" asp-action="Index" >
                    <input type="text" class="form-control table__quick_search" name="searchString"
                           placeholder="البحث السريع ...">
                </form>
            </div>
            <a type="button" class="btn btn-primary" href="@Url.Action("AddUser")">
                إضافة مستخدم
            </a>
        </div>
    </div>
    <div class="block-body">
        <table class="table table-hover js-dataTable">
            <thead>
            <tr>
                <th>الاسم الكامل</th>
                <th>الإيميل</th>
                <th>نوع المستخدم</th>
                <th class=""></th>
            </tr>
            </thead>
            <tbody>
            @{
                foreach (var x in Model)
                {

                    <tr>
                        <td>
                            @x.FullNameAR

                        </td>
                        <td>
                            @x.Email

                        </td>
                        <td>
                            @x.UserType

                        </td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@x.UserId" class="btn btn-success">تعديل</a>
                            <a  onclick="confirmDelete(@x.UserId)" data-id="@x.UserId" class="btn  btn-danger delete-btn">حذف</a>
                        </td>
                    </tr>
                }
            }
                          
                    }
                }
               
            </tbody>
        </table>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
<script>
    $(document).ready(function () {
        $('.delete-btn').click(function (event) {
            event.preventDefault(); 

            var id = $(this).data('id');

            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم، احذف!',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("Delete")',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'نجحت العملية!',
                                    'حُذِف المستخدم.',
                                    'success'
                                ).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'فشلت العملية!',
                                    'لم يُحذف المستخدم.',
                                    'error'
                                );
                            }
                        },
                        error: function () {
                            Swal.fire(
                                'خطأ!',
                                'حدث خطأ غير متوقع.',
                                'error'
                            );
                        }
                    });
                }
            });
        });
    });

</script>
