@model room_reservation.ViewModel.RoomViewModel

<h1>إنشاء قاعة</h1>

<form asp-action="Create" method="post" id="createRoomForm">
    <div class="form-group">
        <label asp-for="RoomNo" class="control-label"></label>
        <input asp-for="RoomNo" type="number" class="form-control" />
        <span asp-validation-for="RoomNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SeatCapacity" class="control-label"></label>
        <input asp-for="SeatCapacity" type="number" class="form-control" />
        <span asp-validation-for="SeatCapacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FloorId" class="control-label"></label>
        <select asp-for="FloorId" class="form-control" asp-items="ViewBag.Floors"></select>
        <span asp-validation-for="FloorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeId" class="control-label"></label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypes"></select>
        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="إنشاء" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("createRoomForm").addEventListener("submit", function (event) {
            event.preventDefault();
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم'
            }).then((result) => {
                if (result.isConfirmed) {
                    event.target.submit();
                }
            });
        });
    </script>
}