@model room_reservation.ViewModel.RoomViewModel

@{
    ViewData["Title"] = "اضافة قاعة";
}

<div class="block mb-4">
    <div class="block-header border-bottom px-4 py-4">
        <h5 class="m-0">إضافة قاعة</h5>
    </div>
    <div class="block-body py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="AddRoom" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="RoomNo" class="control-label">رقم القاعة</label>
                                <input asp-for="RoomNo" class="form-control" />
                                <span asp-validation-for="RoomNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="SeatCapacity" class="control-label">عدد المقاعد</label>
                                <input asp-for="SeatCapacity" class="form-control" />
                                <span asp-validation-for="SeatCapacity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="IsActive" class="control-label">حالة القاعة</label>
                                <input asp-for="IsActive" class="form-control" />
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="FloorId" class="control-label">رقم الدور</label>
                                <select asp-for="FloorId" class="form-control" asp-items="@ViewBag.FloorBag"></select>
                                <span asp-validation-for="FloorId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="RoomTypeId" class="control-label">نوع القاعة</label>
                                <select asp-for="RoomTypeId" class="form-control" asp-items="@ViewBag.RoomTypeBag"></select>
                                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-5" title="save">حفظ</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


  @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="~/lib/sweetalert/sweetalert.min.js"></script>
        <script>
        document.querySelector("form").addEventListener("submit", function (event) {
        event.preventDefault();
        swal({
        title: ""
        text: "",
        icon: "warning",
        buttons: true,
        dangerMode: true,
        }).then((willSubmit) => {
        if (willSubmit) {
        event.target.submit();
        }
        });
        });
        </script>
        }  
