@model room_reservation.ViewModel.RoomViewModel

<h1>حذف قاعة</h1>

<h3>هل أنت متأكد من رغبتك بحذف القاعة؟</h3>
<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomTypeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FloorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FloorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>

    <form asp-action="DeleteRoom" asp-route-guid="@Model.Guid">
        <input type="hidden" asp-for="Guid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">رجوع</a>
    </form>
</div>