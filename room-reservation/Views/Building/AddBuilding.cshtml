@{
}
@model room_reservation.ViewModel.BuildingViewModel
@{
    ViewData["Title"] = "Add Building";
} 
<div class="block mb-4">
    <div class="block-header border-bottom px-4 py-4">
        <h5 class="m-0"> إضاف مبنى </h5>
    </div>
    <div class="block-body py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form id="buildingForm" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="BuildingNameAr" class="mb-1"> اسم المبنى</label>
                                <input asp-for="BuildingNameAr"  class="form-control text-start">
                                <span asp-validation-for="BuildingNameAr" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="BuildingNameEn" class="control-label cb-1">اسم المبنى باللغة الانجليزية</label>
                                <input asp-for="BuildingNameEn" class="form-control" ></input>
                                <span asp-validation-for="BuildingNameEn" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="BuildingNo" class="mb-1">رقم المبنى</label>
                                <input asp-for="BuildingNo" class="form-control" type="number"></input>
                                <span asp-validation-for="BuildingNo" class="text-danger" ></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <label asp-for="Code" class="control-label cb-1">الكود</label>
                                <input asp-for="Code" class="form-control"></input>
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary px-5" title="إضافة">إضافة</button>
                        </div>
                    </div>
                </form>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#buildingForm').submit(function (event) {
                    event.preventDefault(); // Prevent the default form submission

                    $.ajax({
                        url: '@Url.Action("AddBuilding")', // URL to the controller action
                        type: 'POST',
                        data: $(this).serialize(),
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    title: '!نجحت العملية',
                                    text: 'أُضِيفَ المبنى بنجاح',
                                    icon: 'success'
                                }).then(() => {
                                    window.location.href = '@Url.Action("Index")'; // Redirect to Index page after success
                                });
                            } else {
                                Swal.fire({
                                    title: '!فشلت العملية',
                                    text: 'لم يضَاف المبنى ',
                                    icon: 'error'
                                });
                            }
                        },
                        error: function () {
                            Swal.fire({
                                title: 'Error!',
                                text: 'An unexpected error occurred.',
                                icon: 'error'
                            });
                        }
                    });
                });
            });
        </script>

    </div>
</div>
